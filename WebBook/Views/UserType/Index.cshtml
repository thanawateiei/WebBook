@model IEnumerable<WebBook.ViewModels.UserTypeViewModel>

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "ประเภทผู้ใช้";
	var stext = ViewBag.stext;
}


@if (ViewBag.ErrorMessage != null)
	{
	<script type="text/javascript">
	window.onload = function () {
	alert("@ViewBag.ErrorMessage");
	};
	</script>
	}
<h1>จัดการประเภทผู้ใช้</h1>
<hr />
<form asp-controller="UserType" asp-action="Index">
	<div class="row">
		<div class="col-sm-6 col-md-8 col-lg-9">
			<a class="btn btn-primary" asp-action="Create">
				<i class="bi bi-plus-lg"></i>    เพิ่ม
			</a>
		</div>

		<div class="col-sm-6 col-md-4 col-lg-3 text-end">
			<div class="input-group">
				<span class="input-group-text">ค้นหา</span>
				<input type="text" name="stext" class="form-control" value="@stext" />
				<button type="submit" class="btn btn-secondary">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
						<path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
					</svg>
				</button>
			</div>
		</div>

	</div>
</form>

<table class="table ">

	<tr>
		<th>Id</th>
		<th>ประเภท</th>
		<th>จำนวนหนังสือที่ยืมได้</th>
		<th>หนังสือภาษาไทย</th>
		<th>หนังสือภาษาอังกฤษ</th>
		<th></th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{

		<tr>
			<td>@item.UserTypeId</td>
			<td>@item.UserTypeName</td>
			<td>@item.Limit</td>
			<td>@item.Thbook วัน</td>
			<td>@item.Enbook วัน</td>

			<td>
				<a asp-action="Edit" asp-route-id="@item.UserTypeId">
					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
						<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
						<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
					</svg>
				</a>
			</td>
			<td>
				<a asp-action="Delete" asp-route-id="@item.UserTypeId">

					<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-x text-danger" viewBox="0 0 16 16">
						<path d="M6.146 6.146a.5.5 0 0 1 .708 0L8 7.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 8l1.147 1.146a.5.5 0 0 1-.708.708L8 8.707 6.854 9.854a.5.5 0 0 1-.708-.708L7.293 8 6.146 6.854a.5.5 0 0 1 0-.708z" />
						<path d="M4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4zm0 1h8a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z" />
					</svg>
				</a>
			</td>




		</tr>
	}
</table>
@model WebBook.Models.UserType

@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Edit";
}

<h1>แก้ไข</h1>

<h4>ประเภทผู้ใช้</h4>
<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="UserTypeId" />
			<div class="form-group">
				<label asp-for="UserTypeName" class="control-label"></label>
				<input asp-for="UserTypeName" class="form-control" />
				<span asp-validation-for="UserTypeName" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Thbook" class="control-label"></label>
				<input asp-for="Thbook" class="form-control" />
				<span asp-validation-for="Thbook" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Enbook" class="control-label"></label>
				<input asp-for="Enbook" class="form-control" />
				<span asp-validation-for="Enbook" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Limit" class="control-label"></label>
				<input asp-for="Limit" class="form-control" />
				<span asp-validation-for="Limit" class="text-danger"></span>
			</div>
			<div class="form-group">
				<br />

				<div class="d-flex justify-content-between">
					<a type="button" class="btn btn-secondary" asp-action="Index">Back</a>
					<input type="submit" value="Save" class="btn btn-primary  " />
				</div>
			</div>
		</form>
	</div>
</div>



@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

@model WebBook.Models.BookType
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "เพิ่มประเภทหนังสือ";
	var stext = ViewBag.stext;
}
<h4>BookType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookTypeId" class="control-label"></label>
                <input asp-for="BookTypeId" class="form-control" readonly value="@ViewBag.newidbookTypes"/>
                <span asp-validation-for="BookTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookTypeName" class="control-label"></label>
                <input asp-for="BookTypeName" class="form-control" />
                <span asp-validation-for="BookTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model WebBook.Models.Feedback

    <div id="formfeedback" >
    <form asp-action="Feedback">
											<div asp-validation-summary="ModelOnly" class="text-danger"></div>
											<input type="hidden" asp-for="FeedbackId" value="9999" class="form-control" />
											<input type="hidden" asp-for="UserId" class="form-control" />
											<div class="form-group">
												@*<a>คุณชอบเว็บไซต์นี้หรือไม่</a><br />*@
												<label  class="control-label">คุณชอบเว็บไซต์นี้หรือไม่</label>
												<br />
												<div class="form-check form-check-inline">
													<input asp-for="FeedbackLike" class="form-check-input" type="radio" id="inlineRadio1" value="ชอบ" required>
													<label class="form-check-label" for="inlineRadio1">ชอบ</label>
												</div>
												<div class="form-check form-check-inline">
													<input asp-for="FeedbackLike" class="form-check-input" type="radio" id="inlineRadio2" value="ไม่ชอบ" required>
													<label class="form-check-label" for="inlineRadio2">ไม่ชอบ</label>
												</div>
												<span asp-validation-for="FeedbackLike" class="text-danger"></span>
											</div>
											<div class="form-group">
												@*<a>คุณให้คะแนนเว็บไซต์นี้กี่คะแนน</a><br />*@
												<label  class="control-label">คุณให้คะแนนเว็บไซต์นี้กี่คะแนน</label>
												<br />
												<div class="form-check form-check-inline">
													<input asp-for="FeedbackScore" class="form-check-input" type="radio" id="inlineRadio3" value="1" required>
													<label class="form-check-label" for="inlineRadio1">1</label>
												</div>
												<div class="form-check form-check-inline">
													<input asp-for="FeedbackScore" class="form-check-input" type="radio" id="inlineRadio4" value="2" required>
													<label class="form-check-label" for="inlineRadio2">2</label>
												</div>
												<div class="form-check form-check-inline">
													<input asp-for="FeedbackScore" class="form-check-input" type="radio" id="inlineRadio5" value="3" required>
													<label class="form-check-label" for="inlineRadio2">3</label>
												</div>
												<div class="form-check form-check-inline">
													<input asp-for="FeedbackScore" class="form-check-input" type="radio" id="inlineRadio6" value="4" required>
													<label class="form-check-label" for="inlineRadio2">4</label>
												</div>
												<div class="form-check form-check-inline">
													<input asp-for="FeedbackScore" class="form-check-input" type="radio" id="inlineRadio7" value="5" required>
													<label class="form-check-label" for="inlineRadio2">5</label>
												</div>
											</div>
											<div class="form-group">
												<label class="control-label">คำแนะนำเพิ่มเติม</label>
												<textarea asp-for="FeedbackDetail" class="form-control"></textarea>
											</div>
											<div class="form-group text-end">
												<input type="submit" value="ส่ง" class="btn btn-primary" />
											</div>
										
									
						</form>
    </div>
    

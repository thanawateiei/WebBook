@using Microsoft.AspNetCore.Session;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

@{
    ViewData["Title"] = "เข้าสู่ระบบ";
}


<style>
    .btn-color {
        background-color: #0e1c36;
        color: #fff;
    }

    .profile-image-pic {
        height: 200px;
        width: 200px;
        object-fit: cover;
    }

    .cardbody-color {
        background-color: #ebf2fa;
    }

    a {
        text-decoration: none;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card my-5">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-warning">@TempData["Message"]</div>
                }
                <form class="card-body cardbody-color p-lg-5" asp-controller="Account" asp-action="Login" method="POST">
                    <h2 class="text-center text-dark mt-5">เข้าสู่ระบบ</h2>

                    <div class="text-center">
                        <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                             width="200px" alt="profile">
                    </div>

                    <div class="mb-3">
                        <input type="email" class="form-control" name="userEmail" id="userEmail"
                               placeholder="อีเมล" autocomplete="off" required>
                    </div>
                    <div class="mb-3">
                        <input type="password" class="form-control" name="userPass" id="userPass" placeholder="รหัสผ่าน"
                               placeholder="รหัสผ่าน" autocomplete="off" required>
                    </div>
                    <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">เข้าสู่ระบบ</button></div>
                    <div class="form-text text-center mb-5 text-dark">
                        ยังไม่มีบัญชีผู้ใช้? <a asp-action="Register" class="text-dark fw-bold">ลงทะเบียน</a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>
@model WebBook.Models.Issue

@{
    ViewData["Title"] = "Edit";
}
@if (TempData["Message"] != null)
{
    <div class="alert alert-info">
        @TempData["Message"]
    </div>
}

<div id="editModalIssue"
<div class="row">
    <div class="col-md-4">
        @*<form asp-action="Edit">*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IssueId" />
            <input type="hidden" asp-for="UserId" />
            <div class="form-group">
                <label asp-for="IssueTitle" class="control-label"></label>
                <input asp-for="IssueTitle" class="form-control" readonly />
                <span asp-validation-for="IssueTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssueDetail" class="control-label"></label>
                <input asp-for="IssueDetail" class="form-control" readonly/>
                <span asp-validation-for="IssueDetail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IssueStatus" class="control-label"></label>
                <select asp-for="IssueStatus" class="form-select">
                    <option value="กำลังดำเนินการ">กำลังดำเนินการ</option>
                    <option value="แก้ไขเรียบร้อย">แก้ไขเรียบร้อย</option>
                </select>
                <span asp-validation-for="IssueStatus" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>*@
        @*</form>*@
    </div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

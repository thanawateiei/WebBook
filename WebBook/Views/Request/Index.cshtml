@model IEnumerable<WebBook.ViewModels.RequestViewModel>
@{
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
	ViewData["Title"] = "Admin Page";
}

@{
	var stext = ViewBag.stext;
}
@if (ViewBag.ErrorMessage != null)
{
	<script type="text/javascript">
		window.onload = function () {
			alert("@ViewBag.ErrorMessage");
		};
	</script>
}

<h1 class="text-success">รายการคำขอยืม</h1>

<form asp-controller="Request" asp-action="Index">
	<div class="row">
		<div class="col-sm-6 col-md-8 col-lg-9">
		</div>
		<div class="col-sm-6 col-md-4 col-lg-3 text-end">
			<div class="input-group">
				<span class="input-group-text">ค้นหา</span>
				<input type="text" name="stext" class="form-control" value="@stext" />
				<button type="submit" class="btn btn-secondary"><i class="bi-search"></i></button>
			</div>
		</div>

	</div>
</form>
<div class="container-fluid">

	<!-- DataTales Example -->
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">รายการคำขอยืม</h6>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
					<thead>
						<tr>
							<th>ID</th>
							<th>Email</th>
							<th>ชื่อหนังสือ</th>
							<th>วันรับหนังสือ</th>
							<th>CallNumber</th>
							<th>สถานะ</th>
							<th></th>
							<th></th>
						</tr>
					</thead>
				@*	<tfoot>
						<tr>
							<th>ID</th>
							<th>Email</th>
							<th>ชื่อหนังสือ</th>
							<th>วันรับหนังสือ</th>
							<th>CallNumber</th>
							<th>สถานะ</th>
							<th></th>
							<th></th>
						</tr>
					</tfoot>*@
					<tbody>
						@{
							var i = 0;
						}

						@foreach (var item in Model)
						{
							i++;
							<tr>
								<th>@item.RequestId</th>
								<td>@item.UserEmail</td>
								<td>@item.BookTitle</td>
								<td>@item.ReceiveDate</td>
								<td>@item.CallNumber</td>
								<td>@item.Status</td>
								<td>
									<a asp-action="Edit" asp-route-id="@item.RequestId">
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
											<path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z" />
											<path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z" />
										</svg>
									</a>
								</td>
								<td>
									<a asp-action="Delete" asp-route-id="@item.RequestId">
										<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-x text-danger" viewBox="0 0 16 16">
											<path d="M6.146 6.146a.5.5 0 0 1 .708 0L8 7.293l1.146-1.147a.5.5 0 1 1 .708.708L8.707 8l1.147 1.146a.5.5 0 0 1-.708.708L8 8.707 6.854 9.854a.5.5 0 0 1-.708-.708L7.293 8 6.146 6.854a.5.5 0 0 1 0-.708z" />
											<path d="M4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4zm0 1h8a1 1 0 0 1 1 1v12a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1z" />
										</svg>
									</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>

</div>

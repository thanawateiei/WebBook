@model WebBook.Models.Setting

@{
        Layout = "~/Views/Shared/_AdminLayout.cshtml";

    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Setting</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BannerImg)
        </dt>
        <dd class = "col-sm-10">
           @{var img = "/img/setting/" +ViewBag.img;}
            @if(ViewBag.img != null)
            {
                <img src="@img" >
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BannerStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BannerStatus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Detail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Detail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DetailStatus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DetailStatus)
        </dd>
    </dl>
    
    <form asp-action="DeletePost">
        <input type="hidden" asp-for="SettingId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
         <a type="button" class="btn btn-secondary" asp-action="Index">Back</a>
    </form>
</div>
